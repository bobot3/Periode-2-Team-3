<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BasisJaar2.Views.MyMainPage"
             xmlns:ContentView="clr-namespace:BasisJaar2.Views"
             Title="MyMainPage">
    <ContentPage.MenuBarItems>
        <MenuBarItem Text="Pages">
            <MenuFlyoutItem Text="Page1"
                     Clicked="OnPage1Clicked" />
            <MenuFlyoutItem Text="Page2"
                     Clicked="OnPage2Clicked" />
        </MenuBarItem>
    </ContentPage.MenuBarItems>
    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Page1"
                     Clicked="OnPage1Clicked" />
        <ToolbarItem Text="Page2"
                     Clicked="OnPage2Clicked" />
    </ContentPage.ToolbarItems>
    <VerticalStackLayout>
        <ContentView:Header />
        <ContentView x:Name="Subpage" />
        <ContentView:Footer />
    </VerticalStackLayout>
</ContentPage>